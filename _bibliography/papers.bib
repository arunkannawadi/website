@article{2021A&A...646A..73S,
 abbr = {A&A},
 abstract = {{Cosmological simulations predict that galaxies are embedded into
triaxial dark matter haloes, which appear approximately
elliptical in projection. Weak gravitational lensing allows us
to constrain these halo shapes and thereby test the nature of
dark matter. Weak lensing has already provided robust detections
of the signature of halo flattening at the mass scales of groups
and clusters, whereas results for galaxies have been somewhat
inconclusive. Here we combine data from five weak lensing
surveys (NGVSLenS, KiDS/KV450, CFHTLenS, CS82, and RCSLenS,
